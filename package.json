{
    "name": "python-coding-tools",
    "displayName": "Python Coding Tools",
    "description": "The PCT are compilation of tools, which are helpfull when coding Python. The feature list may change over time, as functionality provided by other extensions, will be removed from PCT.",
    "version": "0.0.1",
    "publisher": "nils-ballmann",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.python-coding-tools.update-module-variable",
                "title": "Update python module variable"
            }
        ],
        "configuration": {
            "title": "Python Coding Tools",
            "type": "object",
            "properties": {
                "python-coding-tools.variableName": {
                    "type": "string",
                    "description": "Name of the module variable which should be updated.",
                    "default": "__update__"
                },
                "python-coding-tools.dateTimeFmt": {
                    "type": "string",
                    "description": "Specify the DateTime format in moment.js notation.",
                    "default": "YYYY-MM-DD HH:mm:ss"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "moment": "^2.18.1"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nils-ballmann/python-coding-tools.git"
    },
    "license": "MIT"
}